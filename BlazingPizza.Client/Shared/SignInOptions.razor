
<div class="dialog-title btn-close-cnt" @onclick="@Continue">
    <h2>Sign in</h2>
    <div>
        <a class="signin-close" @onclick="@Exit" />
    </div>
</div>

<form class="dialog-signin-body" @onclick="@Continue">
    <div class="signin-row">
        <div class="signin-vl">
            <span class="signin-vl-innertext">or</span>
        </div>

        <div class="signin-col">
            <a href="user/signin?signInService=Facebook" class="loginBtn loginBtn--facebook">Login with Facebook</a>
            <a href="user/signin?signInService=Google" class="loginBtn loginBtn--google">Login with Google</a>
            <a href="user/signin?signInService=Twitter" class="loginBtn loginBtn--twitter">Login with Twitter</a>
        </div>

        <div class="signin-col">
            <div class="hide-md-lg">
                <p>Or sign in manually:</p>
            </div>
            <input type="text" name="email" placeholder="Email" required>
            <input type="password" name="password" placeholder="Password" required>
            <input type="submit" value="Login">
        </div>
    </div>
</form>

<div class="dialog-buttons" @onclick="@Continue">
    <button class="btn btn-outline-dark mr-auto">Sign up</button>
    <a href="user/signin/guest" class="btn btn-outline-dark ml-auto">Continue as Guest</a>
</div>

@code {
    [Parameter] public EventCallback Continue { get; set; }

    [Parameter] public EventCallback Exit { get; set; }

}
