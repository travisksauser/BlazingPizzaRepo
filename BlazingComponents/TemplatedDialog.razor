@if (Show)
{
    <div class="dialog-container" @onclick="@Exit">
        <div class="dialog">
            @ChildContent
        </div>
    </div>
}

@code {
    [Parameter] public RenderFragment ChildContent { get; set; }
    [Parameter] public bool Show { get; set; }
    [Parameter] public EventCallback Exit { get; set; }
}